<div class="max-w-lg my-12s m-auto">
  <div class="p-4 bg-white border border-gray-600 rounded">

    <div class="flex flex-wrap justify-between items-center mb-5">
      <h1><%= @meeting.name %></h1>
      <%= link_to "Cancel Meeting", meeting_path(@meeting), method: :delete, data: { confirm: "Você tem certeza que deseja cancelar? "}, class: "btn btn-destroy" %> 
    </div>

    <div class="border p-6 bg-gray-300 mb-5 flex items-center justify-between">
      <p class="border-2 py-3 px-4 border-indigo-800 rounded-full text-sm text-indigo-800">
        Hora de início: <span class="font-bold"><%= readable_time(@meeting.start_time) %></span>
      </p>
      <div class="border-t-2 border-indigo-800 border-dashed h-1 flex-1 text-gray-300">------</div>
      <p class="border-2 py-3 px-4 border-indigo-800 rounded-full text-sm text-indigo-800">
        Hora de terminio: <span class="font-bold"><%= readable_time(@meeting.end_time) %></span>
      </p>
    </div>

    <h4>Comentários</h4>
    <hr class="border" />

    <% unless user_signed_in? %>
      <div class="bg-gray-500 rounded p-4 mt-4 text-center">
        <p class="text-sm text-gray-900"><%= link_to "Login", new_user_session_path, class: "link" %> ou <%= link_to "Sign up", new_user_regsitration_path, class: "link" %> comentar.</p>
      </div>
    <% else %>
        <%= render 'comments/form' %>
    <% end %>

    <div id="comments">
      <%= render @meeting.comments %>
    </div>
  </div>
</div>